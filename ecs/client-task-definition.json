{
  "family": "file-upload-client",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::560629972528:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::560629972528:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "file-upload-client",
      "image": "560629972528.dkr.ecr.eu-north-1.amazonaws.com/file-upload-client:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 80,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "VITE_API_BASE_URL",
         "value": "http://file-upload-alb-209868263.eu-north-1.elb.amazonaws.com/api"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/file-upload-client",
          "awslogs-region": "eu-north-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:80 || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}

