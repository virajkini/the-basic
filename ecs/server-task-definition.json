{
  "family": "amgel-jodi-server",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::560629972528:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::560629972528:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "amgel-jodi-server",
      "image": "560629972528.dkr.ecr.ap-south-1.amazonaws.com/amgel-jodi-server:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 3001,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "AWS_REGION",
          "value": "ap-south-1"
        },
        {
          "name": "S3_BUCKET_NAME",
          "value": "amgel-jodi-s3"
        },
        {
          "name": "CLOUDFRONT_DOMAIN",
          "value": "static.amgeljodi.com"
        },
        {
          "name": "PORT",
          "value": "3001"
        },
        {
          "name": "NODE_ENV",
          "value": "production"
        },
        {
          "name": "CLIENT_URL",
          "value": "https://www.amgeljodi.com"
        }
      ],
      "secrets": [
        {
          "name": "JWT_SECRET",
          "valueFrom": "/file-upload-server/jwt-secret"
        },
        {
          "name": "JWT_REFRESH_SECRET",
          "valueFrom": "/file-upload-server/jwt-refresh-secret"
        },
        {
          "name": "MONGODB_URI",
          "valueFrom": "/file-upload-server/mongodb-uri"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/amgel-jodi-server",
          "awslogs-region": "ap-south-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}
